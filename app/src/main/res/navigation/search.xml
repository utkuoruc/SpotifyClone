<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.spotifyclone555.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_genre"
            app:destination="@id/genre" >
            <argument
                android:name="genre"
                app:argType="com.example.spotifyclone555.model.Genre" />
        </action>
    </fragment>

    <include app:graph="@navigation/genre" />
</navigation>