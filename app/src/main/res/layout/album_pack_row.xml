<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="album"
            type="com.example.spotifyclone555.model.Album" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:clickable="true"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_album_cover"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:setImage="@{album.imageSource}"
                app:srcCompat="@drawable/queens_of_the_stone_age_lullabies_to_paralyze"
                tools:srcCompat="@drawable/queens_of_the_stone_age_lullabies_to_paralyze">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/text_album_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minLines="1"
                    android:maxLines = "2"
                    android:text="@{album.albumName}"
                    android:layout_marginHorizontal="4dp"
                    style="@style/Widget.SpotifyClone555.TextView">
                </TextView>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>

