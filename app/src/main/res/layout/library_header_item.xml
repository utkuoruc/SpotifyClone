<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_library"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:layout_weight="4"
        style="@style/Widget.SpotifyClone555.TextView">
    </TextView>
    <ImageView
        android:id="@+id/notifications_bell"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_search_white_24"
        style="@style/Widget.SpotifyClone555.ImageButton">
    </ImageView>
    <ImageView
        android:id="@+id/recent_activities"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_add_24"
        style="@style/Widget.SpotifyClone555.ImageButton">

    </ImageView>
</LinearLayout>