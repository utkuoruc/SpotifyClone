<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="genre"
            type="com.example.spotifyclone555.model.Genre" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="168dp"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            >
            <TextView
                android:id="@+id/text_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:minLines="1"
                android:maxLines = "2"
                android:text="@string/rock"
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:paddingLeft="6dp"
                android:textColor="@color/white"
                style="@style/Widget.SpotifyClone555.TextView">
            </TextView>
            <ImageView
                android:id="@+id/genre_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rotation="25"
                android:layout_weight="4"
                android:setImage="@{genre.genreImage}"
                app:srcCompat="@drawable/queens_of_the_stone_age_lullabies_to_paralyze"
                tools:srcCompat="@drawable/queens_of_the_stone_age_lullabies_to_paralyze">
            </ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
